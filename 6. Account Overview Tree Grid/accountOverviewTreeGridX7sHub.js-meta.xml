            <property name="iconLink" label="Icon Link" type="String" default="/sfsites/c/resource/brandingIcons_x7sHub/icons/SVG/locations_green.svg" />
            <property name="iconAltText" label="Header Icon Alt Text" type="String" default="Location" />
            <property name="accountName" label="Account Name" type="String" default="Account Name" />
            <property name="status" label="Status" type="String" default="Status" />
            <property name="state" label="State" type="String" default="State" />
            <property name="noOfTrainedEmplorees" label="No. of Trained Employees" type="String" default="No. of Trained Employees" />
            <property name="amountFinanced" label="Amount Financed" type="String" default="Amount Financed" />
            <property name="noDataMessage" label="No Data Message" type="String" default="No account data found"/>
            <property name="customClass" label="CSS Class" type="String" description="Apply additional SLDS or custom CSS class" />
